#menuhor {
border:none;
margin: 0;
font-size: 12px;
font-family:Verdana;
}

#menuhor li{
list-style: none;
margin: 0;
display: inline;

}
#menuhor li a,#menuhor li a:link,#menuhor li a:visited{
height:1px; /* IE5.0 bug */
width:141px;
padding: 5px 8px;
margin:0;
border: 1px;
border-style:solid;
border-color:black;
background:#FFFFC0;
text-decoration: none;
color:black;
text-align:center;
}

#menuhor li a:active{
background: #FFFF80;
color:#FF0000;
border-color: #FF0000;


}

#menuhor li a:hover{
background: #FFFF80;
color:#FF0000;
border-color: #FF0000;
font-weight:bold;
}

